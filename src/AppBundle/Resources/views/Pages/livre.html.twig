{% extends "@App/Base/base.html.twig" %}

{% block banner %}
    <div class="banner">
        <!--    SECTION -->
        <section class="section">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="row">
                            <!--                       SLIDER-->
                            <figure>
                                <div id="slider">
                                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

                                        <div class="carousel-inner">
                                            <div class="carousel-item active">
                                                <img class="d-block w-100 img-fluid" src="{{ asset('assets/img/auteur.jpg') }}"
                                                     alt="First slide">
                                            </div>
                                            <div class="carousel-item">
                                                <img class="d-block w-100 img-fluid" src="{{ asset('assets/img/auteur2.jpg') }}"
                                                     alt="Second slide">
                                            </div>
                                            <div class="carousel-item">
                                                <img class="d-block w-100 img-fluid" src="{{ asset('assets/img/auteur3.jpg') }}"
                                                     alt="Third slide">
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <figcaption id="overlay" class="overlay">

                                    <h1 class="black-btn" id="bouton2">Listes des Auteurs</h1>



                                    <a href="#ancre1">
                                        <h1 class="bouton">
                                            GO!
                                        </h1>
                                    </a>
                                </figcaption>
                            </figure>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </div>
{% endblock %}


{% block content %}
    <section id="ancre1">

        <article class="container">
            {% if livres %}
                {% for livre in livres %}
                    {#container pour chaque article qui s'affiche#}

                    <article class="apercu">
                        <h2>
                            {{ livre.titre }}
                        </h2>

                        {% if livre.auteur %}
                            <p class="p2">
                                <a href="{{ path('auteur', {'id': livre.auteur.id}) }}">
                                    de <i><b class="aut_id">{{ livre.auteur.name }}</b></i>
                                </a>

                            </p>
                        {% endif %}

                        <p class="p1">
                            {{ livre.resume }}
                        </p>


                        <p class="p3">
                            <i><b>{{ livre.genre }}</b></i>
                        </p>
                        <p class="p4">
                            <em>
                                {{ livre.parutiondate|date("Y") }}
                            </em>
                        </p>
                        <a href="{{ path('livre', {'id': livre.id}) }}">
                            <p class="l_cat3">apercu</p>
                        </a>

                    </article>


                {% endfor %}
                    {% else %}
                        <div class="overlay2">

                            <h1>Nous n'avons pas encore de livre référencé</h1>
                            <h2>Il faut attendre....</h2>
                        </div>

                    {% endif %}



        </article>
    </section>
{% endblock %}