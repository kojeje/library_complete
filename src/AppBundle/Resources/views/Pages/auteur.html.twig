{% extends "@App/Base/base.html.twig" %}

{% block banner %}
    <div class="banner">
        <!--    SECTION -->
        <section class="section">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="row">
                            <!--                       SLIDER-->
                            <figure>
                                <div id="slider">
                                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

                                        <div class="carousel-inner">
                                            <div class="carousel-item active">
                                                <img class="d-block w-100 img-fluid" src="{{ asset('assets/img/auteur.jpg') }}"
                                                     alt="First slide">
                                            </div>
                                            <div class="carousel-item">
                                                <img class="d-block w-100 img-fluid" src="{{ asset('assets/img/auteur2.jpg') }}"
                                                     alt="Second slide">
                                            </div>
                                            <div class="carousel-item">
                                                <img class="d-block w-100 img-fluid" src="{{ asset('assets/img/auteur3.jpg') }}"
                                                     alt="Third slide">
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <figcaption id="overlay" class="overlay">

                                    <h1 class="black-btn" id="bouton2">Listes des Auteurs</h1>



                                    <a href="#ancre1">
                                        <h1 class="bouton">
                                            GO!
                                        </h1>
                                    </a>
                                </figcaption>
                            </figure>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </div>
{% endblock %}


{% block content %}
    <section id="ancre1">

        <article class="container">
            {% if auteurs %}
                {% for auteur in auteurs %}
                    <a class="apercu" href="{{ path('auteur', {'id': auteur.id}) }}">
                        <div>
                            <h2>
                                {{ auteur.f_name }} ~ " " ~ {{ auteur.l_name }}
                             </h2>
                            <p>
                                {{ auteur.bio }}
                            </p>
                            <p>
                            <span>
                                <br>
                                naissance:  <i class="date">{{ auteur.birthdate|date("j - M - Y") }}</i> <br>
                                {#                          Condition : détermine l'affichage ou non de la date de décès (si oui ou non l'auteur est mort
                                                             Si la date de décès n'est pas "null": l'auteur est mort...
                                                             Donc on affiche la date) #}
                                {% if auteur.deathdate!=null %}
                                    {# #}
                                    décès: <i class="date">{{ auteur.deathdate|date("j - M - Y") }}</i>
                                {% else %}

                                {% endif %}
                            </span>
                            </p>
                {% endfor %}
            {% else %}
               <div class="overlay2">

                   <h1>Nous n'avons pas encore d'auteur référencé</h1>
                   <h2>Il faut attendre....</h2>
               </div>

            {% endif %}



        </article>
    </section>
{% endblock %}